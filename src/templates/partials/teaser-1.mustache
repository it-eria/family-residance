{{#teaser-1}}
<div class="teaser-1">
  <div class="d-lg-block d-none" data-aos="fade-down">
    <img src="assets/img/{{file-name}}" alt="picture" {{#class}}class="{{class}}"{{/class}}>
  </div>
    <div class="mob-carousel d-lg-none d-block">
      <!-- Carousel -->
      <div data-js="mob-carousel-1">
        <!-- Slide -->
        <div class="beauty-carousel__slide beauty-carousel__slide_one">
          <div class="slide-outer" style="background-image: url(assets/img/mob-slide.jpg);"></div>
        </div>
        <div class="beauty-carousel__slide beauty-carousel__slide_one">
          <div class="slide-outer" style="background-image: url(assets/img/mob-slide-1.jpg);"></div>
        </div>
        <div class="beauty-carousel__slide beauty-carousel__slide_one">
          <div class="slide-outer" style="background-image: url(assets/img/mob-slide-2.jpg);"></div>
        </div>
        <!-- /Slide -->
      </div>
      <!-- /Carousel -->  
    </div>
  <div class="descriptions" data-aos="fade-left">
    {{#paragraphs}}
    <p>
      {{{text}}}
    </p>
    {{/paragraphs}}
  </div>
  <div class="d-lg-none d-block d-flex justify-content-center">
    <a href="#" class="btn btn_small">Переглянути усі номери</a>
  </div>
</div>
