{{#beauty-slider}}
  <section class="content-line">
    <div class="container">
      <div class="row d-none d-lg-block">
        <div class="col-12">
          <div class="section-title text-center">
            <h2>
              {{text}}
            </h2>
          </div>
        </div>
      </div>
      <div class="row d-block d-lg-none">
        <div class="col-12">
          {{> ../partials/teaser-1 }}
        </div>
      </div>
      <div class="row justify-content-center d-none d-lg-flex">
        <div class="col-10">
          <div class="services-icons">
              <div class="item">
                <i class="icon icon-24"></i>
                <p>Неперевершений візаж</p>
              </div>
              <div class="item">
                  <i class="icon icon-25"></i>
                  <p>Вишуканий манікюр та педікюр</p>
              </div>
              <div class="item">
                  <i class="icon icon-26"></i>
                  <p>Професійна корекція брів</p>
              </div>
              <div class="item">
                <i class="icon icon-27"></i>
                <p>Знижка 10% Для гостей готелю</p>
              </div>
          </div> 
        </div>
      </div>
      <div class="row justify-content-center d-none d-lg-flex">
        <div class="col-12 col-lg-10">
          <div class="beauty-carousel">
            <!-- Carousel -->
            <div data-js="beauty-carousel">
              {{#slides}}
              <!-- Slide -->
              <div class="beauty-carousel__slide beauty-carousel__slide_one">
                <div class="slide-outer slide-outer__beauty" style="background-image: url(assets/img/{{slide-name}}.jpg);">
                </div>
              </div>
              <!-- /Slide -->
              {{/slides}}
            </div>
            <!-- /Carousel -->  
            <div class="dots-place"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/beauty-slider}}