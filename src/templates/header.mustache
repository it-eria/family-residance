<!-- Modal form -->
<div class="modal register-modal fade" tabindex="-1" role="dialog" id="requestModal">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close pr-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="register-modal__title">
          <h2>Бронювання номеру</h2>
        </div>
        <form action="#" class="register-modal__form">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12 col-md-6">
                <div class="f-group">
                  <label for="f-name">Ім'я</label>
                  <input type="text" id="f-name" name="f-name">
                </div>
                <div class="f-group">
                  <label for="f-surname">Прізвище</label>
                  <input type="text" id="f-surname" name="f-surname">
                </div>
              </div>
              <div class="col-12 col-md-6 mt-3 mt-md-0">
                <div class="f-group">
                  <label for="f-phone">Номер телефону</label>
                  <input type="text" id="f-phone" name="f-phone">
                </div>
                <div class="f-group">
                  <label for="f-mail">Email</label>
                  <input type="email" id="f-mail" name="f-mail">
                </div>
              </div>                              
            </div>
          </div>
          <div class="separator my-3 my-md-5"></div>
          <div class="container-fluid">
            <div class="row align-items-end">
              <div class="col-12 col-lg-4">
                <div class="f-group f-group_inline">
                  <label for="f-select">Кількість гостей:</label>
                  <select id="f-select">
                    <option value="0">2 дорослих</option>
                    <option value="1">Some option</option>
                    <option value="2">Some option</option>
                    <option value="3">Some option</option>
                  </select>
                </div>
              </div>
              <div class="col-12 col-md-6 col-lg-4 mt-3 mt-lg-0">
                <div class="f-group f-group_inline">
                  <label for="f-date-from">Дата заїзду:</label>
                  <input type="text" id="f-date-from" name="f-date-from" value="13.05.18">
                </div>
              </div>
              <div class="col-12 col-md-6 col-lg-4 mt-3 mt-lg-0">
                <div class="f-group f-group_inline">
                  <label for="f-date-to">Дата виїзду:</label>
                  <input type="text" id="f-date-to" name="f-date-to" value="18.05.18">
                </div>
              </div>
            </div>
            <div class="row align-items-end mt-5">
              <div class="col-7 col-md-8">
                <div class="f-group f-group_inline">
                  <label for="f-select-2">Категорія номера:</label>
                  <select id="f-select-2">
                    <option value="0">Напівлюкс</option>
                    <option value="1">Some option</option>
                    <option value="2">Some option</option>
                    <option value="3">Some option</option>
                  </select>
                </div>
              </div>
              <div class="col-5 col-md-4">
                <div class="f-group">
                  <label>Вартість оточнюйте після бронювання</label>
                </div>
              </div>                  
            </div>
          </div>
          <div class="separator my-3 my-md-5"></div>
          <div class="container-fluid">
            <div class="row align-items-end">
              <div class="col-12 col-md-8">
                <div class="row">
                  <div class="col-12 col-md-6 col-lg-4">
                    <div class="f-group">
                      <label for="f-select-time-in">Година заселення:</label>
                      <select id="f-select-time-in">
                        <option value="0">14:00</option>
                        <option value="1">15:00</option>
                        <option value="2">16:00</option>
                        <option value="3">17:00</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-12 col-md-6 col-lg-4 mt-3 mt-md-0">
                    <div class="f-group">
                      <label for="f-select-time-in">Година виселення:</label>
                      <select id="f-select-time-in">
                        <option value="0">14:00</option>
                        <option value="1">15:00</option>
                        <option value="2">16:00</option>
                        <option value="3">17:00</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-12 col-md-12 col-lg-4 mt-3 mt-lg-0">
                    <div class="f-group">
                      <label>Послуги таксі:</label>
                      <label class="checkbox-lbl">
                        Так <input type="radio" name="taxi-service" checked>
                      </label>
                      <label class="checkbox-lbl">
                        Ні <input type="radio" name="taxi-service">
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-12 col-md-4 mt-3 mt-md-0">
                <input type="submit" value="Забронювати">
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
